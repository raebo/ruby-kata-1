<h1>Overview products</h1>

<table>
  <thead>
    <th>Type</th>
    <th>ISBN</th>
    <th>Title</th>
    <th>Authors</th>
    <th></th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.type -%> </td>
        <td><%= product.title -%></td>
        <td><%= product.isbn -%></td>
        <td>
          <% product.authors.each do |author| %>
            <%= "#{author.prename} #{author.lastname}" %>
          <% end %>
        <th>
          <%= link_to 'Show', product_path(product.id) -%>
        </th>
        
      </tr>
    <% end %>
  </tbody>
</table>
